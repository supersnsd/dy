proxy-groups:
  - name: "🔁 Load-Balancing"  # 负载均衡策略组
    type: load-balance
    url: "http://www.gstatic.com/generate_204"
    interval: 300
    strategy: round-robin  # 可选值：round-robin/consistent-hashing
    proxies:
      - "Server-1"  # 替换为您的实际节点名称
      - "Server-2"
      - "Server-3"

  - name: "🔀 Auto-Switch"  # 自动选择策略组（备用）
    type: url-test
    url: "http://www.gstatic.com/generate_204"
    interval: 300
    tolerance: 50
    proxies:
      - "Server-1"
      - "Server-2"
      - "Server-3"

  - name: "🌍 Proxy"  # 主策略组
    type: select
    proxies:
      - "🔁 Load-Balancing"
      - "🔀 Auto-Switch"
      - "DIRECT"

  - name: "📲 Domestic"  # 国内直连
    type: select
    proxies:
      - "DIRECT"
      - "REJECT"

rules:
  - DOMAIN-SUFFIX,cn,DIRECT
  - GEOIP,CN,📲 Domestic
  - MATCH,🌍 Proxy  # 最终回退到代理策略
